<h1>Token Management</h1>

<table>
  <thead>
    <tr>
      <th>Token Image</th>
      <th>Token Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each tokens}}
      <tr>
        <td><img src="{{this.imageUrl}}" alt="{{this.name}}" style="width: 50px; height: auto;"></td>
        <td>{{this.name}}</td>
        <td>
          <a href="/admin/tokens/delete/{{this.id}}" onclick="return confirm('Are you sure you want to delete this token?');">Delete</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<h2>Upload New Token</h2>

<form action="/admin/tokens/create" method="POST" enctype="multipart/form-data">
  <div>
    <label for="name">Token Name:</label>
    <input type="text" id="name" name="name" required>
  </div>
  <div>
    <label for="tokenImage">Token Image:</label>
    <input type="file" id="tokenImage" name="tokenImage" accept="image/*" required>
  </div>
  <button type="submit">Upload Token</button>
</form>