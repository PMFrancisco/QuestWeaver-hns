<div class="wiki-container">
  <aside class="wiki-sidebar">
    {{> categories}}
  </aside>

  <div class="wiki-content">
<h2>Edit GameInfo</h2>

<form action="/gameInfo/update/{{gameInfo.id}}" method="POST">
    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{gameInfo.title}}" required>
    </div>

    <div>
        <label for="content">Content:</label>
        <textarea id="content" name="content" required>{{gameInfo.content}}</textarea>
    </div>

    <button type="submit">Update</button>
</form>

  </div>
</div>
